<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment length="0" ticks_per_second="10" random_seed="0"/>
  </framework>

  <!-- ************** -->
  <!-- * Controller * -->
  <!-- ************** -->
  <controllers>
    <lua_controller id="mycontroller">
      <actuators>
        <builderbot_dds implementation="default"
                        device="dds"
                        left="out_anglvel0_raw"
                        right="out_anglvel1_raw" />
        <builderbot_ems implementation="default" 
                        device="ems" />
      </actuators>
      <sensors>
        <builderbot_ems implementation="default" 
                        device="ems"
                        voltage="in_voltage_raw" />
        <builderbot_lar implementation="default"/>
        <builderbot_cam implementation="default"
                        resolution="640,360">
          <frame src="tags6.pgm" />
          <frame src="tags4.pgm" />
          <frame src="tags2.pgm" />
          <device id="ov5640"/>
        </builderbot_cam>
      </sensors>
      <params script="mycontroller.lua"/>
    </lua_controller>
  </controllers>

</argos-configuration>
