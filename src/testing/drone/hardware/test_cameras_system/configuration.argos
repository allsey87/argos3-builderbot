<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <system threads="0" />
    <experiment length="0" ticks_per_second="10" random_seed="12345" />
    <execute script="stream_on.sh" arguments="6 4" on="robot_pre_init"/>
    <execute script="stream_off.sh" arguments="" on="robot_post_destroy"/>
  </framework>
  
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <lua_controller id="drone">
      <environment router="localhost:4950"/>
      <actuators>
        <wifi implementation="default" />
      </actuators>
      <sensors>
        <drone_camera_system implementation="default"
          calibration="src/calibration/drone_camera_system.xml"
          devices="6,7,8,9"/>
        <wifi implementation="default" />
      </sensors>
      <params script="src/testing/test_cv.lua" />
    </lua_controller>
  </controllers>

</argos-configuration>
