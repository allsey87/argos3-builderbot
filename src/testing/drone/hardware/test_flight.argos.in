<?xml version="1.0" ?>
<argos-configuration>

  <!-- ************************* -->
  <!-- * General configuration * -->
  <!-- ************************* -->
  <framework>
    <experiment length="1000" ticks_per_second="5" />
  </framework>
  
  <!-- *************** -->
  <!-- * Controllers * -->
  <!-- *************** -->
  <controllers>
    <lua_controller id="drone">
      <environment pixhawk="/dev/ttyS1"/>
      <actuators>
        <drone_flight_system implementation="default"/>
      </actuators>
      <sensors>
        <drone_system implementation="default" />
        <drone_flight_system implementation="default"/>
      </sensors>
      <params script="@CMAKE_INSTALL_PREFIX@/share/argos3/testing/test_flight.lua" />
    </lua_controller>
  </controllers>

</argos-configuration>
